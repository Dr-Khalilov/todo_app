{
    "name": "server",
    "version": "1.0.0",
    "description": "Todo application for everyone",
    "main": "./src/main.js",
    "private": true,
    "scripts": {
        "start": "node ./src/main.js",
        "start:dev": "nodemon -q ./src/main.js",
        "debug": "nodemon --inspect ./src/main.js",
        "lint:fix": "eslint \"{src,apps,libs}/**/*.js\" --fix",
        "prettier:check": "prettier --check ./",
        "prettier:fix": "prettier --write ./",
        "format": "npm run prettier:fix && npm run lint:fix"
    },
    "type": "commonjs",
    "keywords": [
        "nodejs",
        "express",
        "rest",
        "api",
        "sequelize",
        "postgresql"
    ],
    "author": "Umar Khalilov",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^2.28.0",
        "dotenv": "^16.0.0",
        "envalid": "^7.3.1",
        "express": "^4.17.3",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.16.2",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "sequelize-cli": "^6.4.1"
    }
}
